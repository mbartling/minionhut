<div class="container">
	<h1>Gallery</h1>
</div>
<div class="container">
	<!-- if galleries -->
	{{#if galleries}}
		{{#each galleries}}
		<h2>{{name}}
			<div class="pull-right text-muted">19th May 2014</div>
		</h2>
		<div  id="links" class="row gallery-images">
				{{#if heroImage}}
				<!-- <div class="col-sm-4 col-md-4 gallery-image"> -->
				<div class="col-sm-4 col-md-4 gallery-image">
					<a href="{{cloudinaryUrl heroImage}}" title="" data-gallery>
						<img src="{{cloudinaryUrl heroImage width='680'}}" class="img-rounded">
					</a>
				</div>
				{{/if}}
				<div class="col-sm-8 col-md-8">
					<div class="row">
						{{#each images}}
						<div class="col-xs-4 col-sm-4 col-md-3 gallery-image">
							<a href="{{cloudinaryUrl}}" title="" data-gallery>
								<img src="{{cloudinaryUrl width='300'}}" class="img-rounded">
							</a>
						</div>
						{{/each}}
					</div>
				</div>
		</div>

		{{/each}}
	{{else}}
	<!-- else -->
	<h3 class="text-muted">There are no image galleries yet.</h3>
	{{/if}}
</div>
