<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/blog">&larr; back to the blog</a></p>
				<hr>
				<header>
					<h1>{{data.post.title}}</h1>
					<h5>
						{{{categoryList data.post.categories prefix="Posted in "}}}
						{{#if author.name.first}}by {{author.name.first}}{{/if}}
					</h5>
				</header>
				{{#if data.post.image}}
				<div class="row  gallery-images">
					<div class="col-xs-4 col-sm-4 col-md-3 gallery-image">
					<a href="{{cloudinaryUrl data.post.image}}" title="" data-gallery>
							<img src="{{cloudinaryUrl data.post.image}}" alt="" class="img-rounded img-responsive">
						</a>
					</div>
				</div>
				{{/if}}

				<div class="post">
					{{{data.post.content.extended}}}
				</div>
			</article>
		</div>
		<!-- <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2"> -->
		
		<!-- </div> -->
	</div>
</div>
